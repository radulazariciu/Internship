@model NikeWebsite.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <fieldset>
            <legend>Login Form</legend>
            <div class="editor-label">@Html.LabelFor(u => u.emailAddress)</div>
            <div class="editor-field">@Html.TextBoxFor(u => u.emailAddress)</div>
        <div class="editor-label">@Html.LabelFor(u => u.Password)</div>
        <div class="editor-field">@Html.PasswordFor(u => u.Password)</div>
    <input type="submit" value="Log In" />
</fieldset>
</div>
}
